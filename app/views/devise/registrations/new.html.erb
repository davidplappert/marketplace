<div class="d-flex justify-content-center">
  <div class="card sign-up-card" style="width: 23rem;">
  <div class="card-img-top"><h4 class="text-center">Sign Up</h4></div>
  <div class="card-body">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="form-group">
        <%= f.label :email, for:'inputEmail', class:'bmd-label-floating' %>
        <%= f.email_field :email, class:'form-control', id:'inputEmail' %>
      </div>

      <div class="form-group">
        <%= f.label :password, for:'inputPassword', class:'bmd-label-floating'  %>
        <%= f.password_field :password, class:'form-control', id:'inputPassword' %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, for:'inputPasswordConfirmation', class:'bmd-label-floating'  %>
        <%= f.password_field :password_confirmation, class:'form-control', id:'inputPasswordinputPasswordConfirmation' %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", class:'btn btn-primary btn-raised btn-block btn-lg' %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
</div>
