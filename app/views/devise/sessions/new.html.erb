<div class="d-flex justify-content-center">
  <div class="card sign-in-card" style="width: 23rem;">
  <div class="card-img-top"><h4 class="text-center">Log in</h4></div>
  <div class="card-body">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        <%= f.label :email, for:'inputEmail', class:'bmd-label-floating' %>
        <%= f.email_field :email, class:'form-control', id:'inputEmail' %>
      </div>

      <div class="form-group">
        <%= f.label :password, for:'inputPassword', class:'bmd-label-floating' %>
        <%= f.password_field :password, class:'form-control', id:'inputPassword' %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="checkbox">
          <label>
            <%= f.check_box :remember_me %> Remember Me
          </label>

        </div>
      <% end -%>

      <div class="actions">
        <%= f.submit "Log in", class:'btn btn-primary btn-raised btn-block btn-lg' %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
</div>
