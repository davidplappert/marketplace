<div class="col-12" data-controller="signup">
	<div class="col-12 uits-portal-section">
		<h2 class="display-4 text-center">
			Welcome to UITS
		</h2>
	</div>
	<div class="row justify-content-md-center">
		<div class="col-md-4">
			<select class="custom-select custom-select-lg mb-3" style="background-color: #fff" data-action="signup#setRoute">
			  <option selected>Select a portal to get started</option>
				<option value="0">Returning User</option>
			  <option value="1">Employee Portal</option>
			  <option value="2">Employer Portal</option>
			  <option value="3">TPA Portal</option>
				<option value="register">Employer Registration</option>
			</select>
			<fieldset disabled>
				<button type="button" class="btn btn-raised btn-success btn-block btn-lg" data-target="signup.continueBtn" data-action="click->signup#goToRoute">Continue</button>
			</fieldset>
		</div>
	</div>
</div>
