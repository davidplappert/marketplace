<div class="card">
  <div class="card-header" id= "card-header">Your Wage Reports</div>
    <div class="card-body">
      <div class="card">
      <ul class="list-group">
      <li class="list-group-item active">Quarter</li>
      <% @all_quarters.each do |quarter|%>
        <div class="accordion md-accordion" id="accordionEx" role="tablist" >
          <div class="card-header" role="tab">
            <a data-toggle="collapse" data-parent="#accordionEx" href="#<%="#{quarter.begin_on}"%>"
              <li class="list-group-item"> <%= "#{quarter.title}"%></li>
            </a>
          </div>
        <div id= <%="#{quarter.begin_on}"%> class="collapse hide" role="tabpanel" aria-labelledby="headingOne1" data-parent="#accordionEx">
            <table id="dtBasicExample" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
            <thead>
              <tr>
                <th class="th-sm">Status
                </th>
                <th class="th-sm">Submission Method
                </th>
                <th class="th-sm">Total Wages
                </th>
                <th class="th-sm">Excess Wages
                </th>
                <th class="th-sm">UI Amount Due
                </th>
              </tr>
            </thead>
            <tbody>
            <%  @organization.wage_reports.filter_by_date_and_status(quarter).each do |report|%>
                <tr>
                  <td><%= link_to "#{report.status.capitalize}", wage_report_path(report)%></td>
                  <td><%=report.submission_kind.capitalize%></td>
                  <td>$<%=report.total_wages%></td>
                  <td>$<%=report.excess_wages%></td>
                  <td>$<%=report.ui_amount_due%></td>
                </tr>
                <%end%>
                </tbody>
                </table>
        </div>
        
        <%end%>
        </ul>
        </div>
      </div>
</div>

